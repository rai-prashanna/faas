FROM golang:1.11

# go stuff
RUN go get -u github.com/kardianos/govendor && \
    go get -u -v github.com/codeskyblue/fswatch

RUN mkdir -p /go/src/github.com/modfin/faas-scaffold/faas-gateway
WORKDIR /go/src/github.com/modfin/faas-scaffold/faas-gateway

EXPOSE 80

RUN echo "desc: Auto generated by fswatch [gatewayd] \n\
triggers: \n\
- name: '' \n\
  pattens: \n\
  - '**/*.go' \n\
  env: \n\
    DEBUG: '1' \n\
  cmd: tail -200f /var/log/syslog \n\
  shell: true \n\
  delay: 100ms \n\
  stop_timeout: 500ms \n\
  signal: KILL \n\
  kill_signal: '' \n\
watch_paths: \n\
- . \n\
watch_depth: 10 \n\
" >> /fsw.yml

CMD govendor init && govendor fetch -v +m && fswatch -config /fsw.yml
